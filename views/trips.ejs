<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trip Planner - View Trips</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #000;
            color: #fff;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar a {
            color: #fff;
            text-decoration: none;
            font-weight: bold;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 40px;
        }

        .trip {
            border-bottom: 1px solid #ddd;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .trip-header {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: #007bff;
        }

        .country-list {
            font-size: 1.1rem;
            margin-bottom: 10px;
            color: #333;
        }

        .destination-info {
            margin-left: 20px;
            margin-top: 10px;
            padding: 10px;
            background-color: #f9f9f9;
            border-left: 4px solid #007bff;
            border-radius: 4px;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
            margin-top: 40px;
        }
    </style>
</head>

<body>
    <header class="navbar">
        <div class="logo">
            <a href="/">Travel Planner</a>
        </div>
        <nav>
            <a href="/trips/view">View Trips</a> |
            <a href="/trips/add">Add Trip</a> |
            <a href="/auth/logout">Logout</a>
        </nav>
    </header>

    <div class="container">
        <h1>Your Trip Routes</h1>

        <% trips.forEach(trip => { %>
        <div class="trip">
            <div class="trip-header">
                <i class="fas fa-route"></i> <%= trip.tripName %>
            </div>

            <div class="country-list">
                <strong>Countries in Trip:</strong>
                <ul>
                    <% 
                    const uniqueCountries = [...new Set(trip.destinations.map(dest => dest.country))];
                    uniqueCountries.forEach(country => { 
                    %>
                    <li><%= country %></li>
                    <% }) %>
                </ul>
            </div>

            <% trip.destinations.forEach(destination => { %>
            <div class="destination-info">
                <p>
                    <strong>City:</strong> <%= destination.city %><br />
                    <strong>Country:</strong> <%= destination.country %><br />
                    <strong>From:</strong> <%= new Date(destination.startDate).toLocaleDateString() %> -
                    <strong>To:</strong> <%= new Date(destination.endDate).toLocaleDateString() %>
                </p>
                <% if (destination.activities && destination.activities.length > 0) { %>
                <p>
                    <strong>Activities:</strong> <%= destination.activities.join(', ') %>
                </p>
                <% } %>
            </div>
            <% }) %>
        </div>
        <% }) %>
    </div>

    <footer>
        &copy; 2024 Travel Planner. All rights reserved.
    </footer>
</body>

</html>
